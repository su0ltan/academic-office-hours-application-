<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".student.sendRequestAct"
    android:background="#f2f2f2"
    android:layoutDirection="rtl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@color/md_blue_700"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="162dp"
                    android:layout_height="49dp"
                    android:layout_margin="50dp"
                    android:text="@string/reserveAppointment"
                    android:textColor="@color/colortext"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />


            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <Spinner
                android:id="@+id/spnCourses"
                android:layout_width="190dp"
                android:layout_height="76dp"
                android:background="#d1d1e0"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textSize="50sp"
                />
            <TextView
                android:id="@+id/checktimetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="@string/timeAvailable"
                android:textSize="15sp"
                android:layout_toEndOf="@id/spnCourses"
           />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="25dp"
                android:text="Teacher Name"
                android:id="@+id/txtTeachername"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/txtselectdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/chooseDate"
                android:fontFamily="@font/brandon_medium"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"

             />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/timespicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chooseTime"
                android:textAlignment="center"
                android:fontFamily="@font/brandon_medium"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <Spinner
                android:id="@+id/spnReaason"
                android:layout_width="190dp"
                android:layout_height="60dp"
                android:background="#d1d1e0"
                android:text="@string/chooseTime"
                android:layout_centerHorizontal="true"

                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">
            <EditText
            android:id="@+id/txtproblem"
            android:layout_width="297dp"
            android:layout_height="86dp"
            android:layout_margin="25dp"
                android:visibility="invisible"

            android:ems="10"
            android:hint="@string/writeÙŒReason1"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSend1"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:onClick="checkRequest"
                app:cardBackgroundColor="@color/md_blue_700"
                app:cardCornerRadius="5dp">


                <TextView
                    android:id="@+id/textView"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sendRequest"
                    android:textColor="@color/colortext"
                    android:textSize="20sp"
                    android:textStyle="bold" />



            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"/>







    </LinearLayout>




</ScrollView>